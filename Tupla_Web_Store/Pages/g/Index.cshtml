@page
@model Tupla_Web_Store.Pages.g.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="search" />
            <span class="input-group-btn">
                <button class="btn btn-outline-dark">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
@foreach (var item in Model.piclist)
{
    <a class="row btn-outline-dark pb-1" asp-page="./Detail" asp-route-id="@item.Key.GameId">
        <div class="col-xl-2">
            <!--Image 16:9 192px * 108px-->
            <img class="rounded img-fluid" src="@item.Value" asp-append-version="true"
                 style="width:100%;max-height:108px" />
        </div>
        <div class="col-xl-5 my-auto">
            @Html.DisplayFor(modelItem => item.Key.GameName)
        </div>
        <div class="col-xl-2 my-auto">
            @Html.DisplayFor(modelItem => item.Key.ReleaseDate)
        </div>
        <div class="col-xl-3 btn-group my-auto">
            <!--Manipulate price-->
            -%<!--Discount in here-->
            @Html.DisplayFor(modelItem => item.Key.Price)
        </div>
        <hr/>
    </a>
}

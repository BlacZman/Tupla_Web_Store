@page
@model Tupla_Web_Store.Pages.t.test.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Platform name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Platform) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Platform_name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.PlatformId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
